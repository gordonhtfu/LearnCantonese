<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Custom Styling for TextViews, etc. -->
    <style name="BaseTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PrimaryTextStyle" parent="BaseTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryTextStyle" parent="BaseTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>
    
    <style name="CounterTextStyle" parent="BaseTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/counter_text_size</item>
    </style>
        
    <style name="PrimaryListItemImage">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginLeft">@dimen/edge_margin</item>
    </style>
    
    <style parent="@android:attr/listViewStyle" name="TreeViewListStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:divider">@drawable/divider</item>
    </style>
</resources>