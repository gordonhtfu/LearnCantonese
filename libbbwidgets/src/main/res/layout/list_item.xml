<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_overlay"
    android:duplicateParentState="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:duplicateParentState="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/liLeftImage"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            android:adjustViewBounds="true"
            android:maxHeight="40dp"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true" >

                <TextView
                    android:id="@+id/liTitleTextView"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:duplicateParentState="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@drawable/list_item_font_primary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/liStatusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingEnd="0dp"
                    android:paddingStart="4dp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/liDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@drawable/list_item_font_secondary"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/liRightImage"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            android:adjustViewBounds="true"
            android:maxHeight="40dp"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/liDeleteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:duplicateParentState="true"
            android:padding="8dp"
            android:src="@drawable/ic_cancel_24dp"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>