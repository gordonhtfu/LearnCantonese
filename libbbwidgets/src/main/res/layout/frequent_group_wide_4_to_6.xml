<?xml version="1.0" encoding="utf-8"?>
<com.blackberry.widgets.MaxLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxHeight="@dimen/fg_max_medium_actionbadge_size"
    android:orientation="horizontal"
    android:padding="@dimen/fg_actionbadge_halfpadding" >

    <com.blackberry.widgets.smartintentchooser.SquareFrameLayout
        android:id="@id/fgLocation1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/fg_actionbadge_halfpadding" />

    <com.blackberry.widgets.smartintentchooser.SquareFrameLayout
        android:id="@id/fgLocation2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/fg_actionbadge_halfpadding" />

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.blackberry.widgets.MaxLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxHeight="@dimen/fg_max_small_actionbadge_size"
                android:orientation="horizontal" >

                <com.blackberry.widgets.smartintentchooser.SquareFrameLayout
                    android:id="@id/fgLocation3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/fg_actionbadge_halfpadding" />

                <com.blackberry.widgets.smartintentchooser.SquareFrameLayout
                    android:id="@id/fgLocation4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/fg_actionbadge_halfpadding" />
            </com.blackberry.widgets.MaxLinearLayout>

            <com.blackberry.widgets.MaxLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxHeight="@dimen/fg_max_small_actionbadge_size"
                android:orientation="horizontal" >

                <com.blackberry.widgets.smartintentchooser.SquareFrameLayout
                    android:id="@id/fgLocation5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/fg_actionbadge_halfpadding" />

                <com.blackberry.widgets.smartintentchooser.SquareFrameLayout
                    android:id="@id/fgLocation6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/fg_actionbadge_halfpadding" />
            </com.blackberry.widgets.MaxLinearLayout>
        </LinearLayout>

</com.blackberry.widgets.MaxLinearLayout>