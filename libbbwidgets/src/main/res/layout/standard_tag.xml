<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stRootLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:duplicateParentState="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:duplicateParentState="true"
        android:padding="0dp">

        <FrameLayout
            android:id="@+id/stLabelFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="0dp"
            android:duplicateParentState="true"
            android:minWidth="60dp"
            android:paddingLeft="4dp">

            <TextView
                android:id="@+id/stLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:duplicateParentState="true"
                android:ellipsize="end"
                android:paddingRight="6dp"
                android:singleLine="true"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/tag_text_color" />
        </FrameLayout>

        <TextView
            android:id="@+id/stDeleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/stLabelFrameLayout"
            android:background="@drawable/tag_bright_delete_button"
            android:gravity="center"
            android:minWidth="20dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/letter_x"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tag_bright_overlay"
        android:duplicateParentState="true" />

</FrameLayout>